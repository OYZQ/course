<odoo>
    <data noupdate="0">
        <record id="module_category_todo" model="ir.module.category">
            <field name="name">待办事项</field>
        </record>

        <record id="group_todo_user" model="res.groups">
            <field name="name">用户</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="todo.module_category_todo"/>
            <field name="users" eval="[(4,ref('base.user_root'))]"/>
        </record>

        <record id="group_todo_manager" model="res.groups">
            <field name="name">管理员</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user')),(4,ref('todo.group_todo_user'))]"/>
            <field name="category_id" ref="todo.module_category_todo"/>
            <field name="users" eval="[(4,ref('base.user_root'))]"/>
        </record>

        <record id="group_todo_coordinator" model="res.groups">
            <field name="name">经理</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="todo.module_category_todo"/>
            <field name="users" eval="[(4,ref('base.user_root'))]"/>
        </record>

        <record id="group_todo_employee" model="res.groups">
            <field name="name">员工</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="todo.module_category_todo"/>
            <field name="users" eval="[(4,ref('base.user_root'))]"/>
        </record>

    </data>
</odoo>